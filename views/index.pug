extends layout
block content
  div(class="container")
    h1= title
    div(id="login", class="hidden")
      h2 #{__('Login')}
      form(id="loginForm", autocomplete="off")
        div(class="form-row")
          div(class="form-group col-md-6")
            label(for="inputUsername")
              | #{__('Username')}
            input(type="text", class="form-control", id="inputUsername", placeholder=__('Username'), required)
          div(class="form-group col-md-6")
            label(for="inputPassword")
              | #{__('Password')}
            input(type="password", class="form-control", id="inputPassword", placeholder=__('Password'), required)
        div(class="form-row")
          div(class="form-group col-md-6")
            div(class="custom-control custom-checkbox")
              input(class="custom-control-input", type="checkbox", id="rememberMe")
              label(class="custom-control-label", for="rememberMe")
                | #{__('Remember me')}
        div(class="form-row")
          div(class="form-group col-md-12")
            button(type="submit", class="btn btn-default")
              | #{__('Sign in')}
        div(id="loginFailed", class="alert alert-danger", role="alert", hidden)
          | #{__('Login failed')}
    div(id="content")
